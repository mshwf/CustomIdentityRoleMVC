@using CustomIdentityRoleMVC.Models;
@model MIdentityRole

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @:Name @Html.EditorFor(m=>m.Name, new { htmlAttributes=new { @class="form-control"} })
    @:Description @Html.EditorFor(m=>m.Description, new { htmlAttributes = new { @class = "form-control" } })<br />
<input type="submit" value="Create Role" class="btn btn-primary"/>
}